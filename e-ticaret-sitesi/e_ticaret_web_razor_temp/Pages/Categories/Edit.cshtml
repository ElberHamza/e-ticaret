@page
@model e_ticaret_web_razor_temp.Pages.Categories.CreateModel

<form method="post">
    <input asp-for="Category.Id" hidden/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kategori Düzenle</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0">Kategori Adı</label>
            <input asp-for="Category.Name" class="form-control" placeholder="Kategori adı giriniz" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0">Gösterim Sırası</label>
            <input asp-for="Category.DisplayOrder" class="form-control" placeholder="Gösterim sırası giriniz" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Değiştir</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/categories/index" class="btn btn-secondary form-control">
                    Listeye Dön
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
